import java.util.Scanner;
public class Main {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int tamanho, soma = 0;

        System.out.println("Informe o tamanho da array: ");
        tamanho = sc.nextInt();
        int[] array = new int[tamanho];

        System.out.println("Informe os elementos da array: ");
        for (int i = 0; i < array.length; i++) {
            array[i] = sc.nextInt();
            soma += array[i];
        }

        for (int i = 0; i < array.length; i++) {
            System.out.printf("Array[%d] = %d ", i, array[i]);
        }
        System.out.printf("\nSOMA: %d", soma);

        sc.close();
    }
}
