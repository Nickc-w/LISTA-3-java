public class Main {
    public static void main(String[] args) {
        int[ ] array = {2, 3, 8, 12, 5, 9, 2, 1, 7, 4};
        // considerando o 0 par
        int soma = 0;

        for(int i = 0;i<10;i++){
            if (i%2==0){
                soma += array[i];
            }
        }

        System.out.printf("Soma dos elementos nas posicoes pares: %d ",soma);

    }
}
